<Window x:Class="Img2Go.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Img2Go.ViewModels"
        xmlns:converters="clr-namespace:Img2Go.Converters"
        mc:Ignorable="d"
        Title="Img2Go - Fast Image Converter"
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="False"
        Background="{DynamicResource WindowBackgroundBrush}"
        AllowDrop="True"
        DragOver="Window_DragOver"
        Drop="Window_Drop">
    
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    
    <Window.InputBindings>
        <KeyBinding Key="O" Modifiers="Ctrl" Command="{Binding OpenFilesCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ConvertCommand}"/>
        <KeyBinding Key="R" Modifiers="Ctrl+Shift" Command="{Binding ShowResizeDialogCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding RemoveSelectedCommand}"/>
        <KeyBinding Key="L" Modifiers="Ctrl" Command="{Binding ToggleThemeCommand}"/>
    </Window.InputBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="{DynamicResource TitleBarBrush}" Height="50">
            <Grid>
                <TextBlock Text="Img2Go" 
                           FontSize="20" 
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="20,0,0,0"
                           Foreground="{DynamicResource TextBrush}"/>
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           Margin="0,0,20,0">
                    <Button Content="ðŸŒ™" 
                            Width="35" 
                            Height="35"
                            Command="{Binding ToggleThemeCommand}"
                            Style="{StaticResource IconButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: File List -->
            <Border Grid.Column="0" 
                    Background="{DynamicResource CardBrush}"
                    CornerRadius="8"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Toolbar -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="ðŸ“ Open" 
                                Command="{Binding OpenFilesCommand}"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,5,0"/>
                        <Button Content="ðŸ“‚ Folder" 
                                Command="{Binding OpenFolderCommand}"
                                Style="{StaticResource SecondaryButtonStyle}"/>
                    </StackPanel>

                    <!-- Image List -->
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding ImageItems}"
                             SelectedItem="{Binding SelectedImage}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource ItemBrush}"
                                        CornerRadius="4"
                                        Padding="10"
                                        Margin="0,0,0,5"
                                        Cursor="Hand">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" 
                                                   Text="{Binding FileName}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Foreground="{DynamicResource TextBrush}"
                                                   FontWeight="Medium"/>
                                        <TextBlock Grid.Row="1" 
                                                   Text="{Binding FormattedSize}"
                                                   FontSize="11"
                                                   Foreground="{DynamicResource SecondaryTextBrush}"
                                                   Margin="0,3,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Right Panel: Preview & Controls -->
            <Border Grid.Column="2" 
                    Background="{DynamicResource CardBrush}"
                    CornerRadius="8"
                    Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Area -->
                    <Border Grid.Row="0" 
                            Background="{DynamicResource WindowBackgroundBrush}"
                            CornerRadius="4"
                            Margin="0,0,0,20"
                            AllowDrop="True"
                            DragOver="Border_DragOver"
                            Drop="Border_Drop">
                        <Grid>
                            <TextBlock Text="Drop your images here" 
                                       FontSize="24"
                                       Foreground="{DynamicResource SecondaryTextBrush}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding PreviewImage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>
                            <Image Source="{Binding PreviewImage}"
                                   Stretch="Uniform"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   MaxWidth="600"
                                   MaxHeight="400"/>
                        </Grid>
                    </Border>

                    <!-- Format Selection -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Output Format:"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1"
                                  SelectedItem="{Binding SelectedFormat}"
                                  ItemsSource="{Binding Source={StaticResource Formats}}"
                                  Background="{DynamicResource ItemBrush}"
                                  Foreground="{DynamicResource TextBrush}"/>
                    </Grid>

                    <!-- Quality Slider -->
                    <Grid Grid.Row="2" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Text="Quality:"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="0,0,10,0"/>
                        <Slider Grid.Column="1"
                                Minimum="1"
                                Maximum="100"
                                Value="{Binding Quality}"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2" 
                                   Text="{Binding Quality, StringFormat={}{0}%}"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="10,0,0,0"
                                   MinWidth="40"/>
                    </Grid>

                    <!-- Resize Options -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Width:"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="0,0,0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="0"
                                 Text="{Binding ResizeWidth, Converter={StaticResource NullableIntConverter}}"
                                 Margin="0,0,5,0"
                                 Background="{DynamicResource ItemBrush}"
                                 Foreground="{DynamicResource TextBrush}"/>

                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="Height:"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource TextBrush}"
                                   Margin="5,0,0,5"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Text="{Binding ResizeHeight, Converter={StaticResource NullableIntConverter}}"
                                 Margin="5,0,5,0"
                                 Background="{DynamicResource ItemBrush}"
                                 Foreground="{DynamicResource TextBrush}"/>

                        <CheckBox Grid.Row="1" Grid.Column="2"
                                  Content="Maintain Aspect Ratio"
                                  IsChecked="{Binding MaintainAspectRatio}"
                                  VerticalAlignment="Center"
                                  Foreground="{DynamicResource TextBrush}"
                                  Margin="10,0,0,0"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="{DynamicResource TitleBarBrush}"
                Height="40">
            <Grid Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextBrush}"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Convert" 
                            Command="{Binding ConvertCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,0,10,0"
                            IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"/>
                    <Button Content="Cancel" 
                            Command="{Binding CancelConversionCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <ProgressBar Value="{Binding Progress}"
                                 Width="200"
                                 Height="20"
                                 Margin="10,0,0,0"
                                 Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

