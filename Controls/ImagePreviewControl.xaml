<UserControl x:Class="Img2Go.Controls.ImagePreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <ScrollViewer x:Name="PreviewScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto">
            <Border x:Name="ImageContainer">
                <Image x:Name="PreviewImage"
                       Source="{Binding PreviewImage, RelativeSource={RelativeSource AncestorType=UserControl}}"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="HighQuality"/>
            </Border>
        </ScrollViewer>
        
        <!-- Zoom Controls -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="10">
            <Button Content="âˆ’" 
                    Width="30"
                    Height="30"
                    Click="ZoomOut_Click"
                    Margin="0,0,5,0"/>
            <Button Content="+" 
                    Width="30"
                    Height="30"
                    Click="ZoomIn_Click"
                    Margin="0,0,5,0"/>
            <Button Content="Reset" 
                    Click="ResetZoom_Click"/>
        </StackPanel>
    </Grid>
</UserControl>

